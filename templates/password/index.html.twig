{% extends 'panel.html.twig' %}

{% block title %}Zmień hasło{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
<main style="margin-top: 58px">


<div class="container">
    <div class="row">
        <div class="col-xs-12 col-sm-6 col-md-6">
            <div class="well well-sm">
                <div class="row">
                    <div class="col-sm-6 col-md-8">
                    {{ form_start(form) }}    
                            <br />
                            Nowe hasło:
                            <br />
                            <i class="glyphicon glyphicon-envelope"></i>{{ form_widget(form.password.pass, {'attr': {'class': ''}}) }}
                            <br />
                            <br />
                            Powtórz hasło:
                            <br />
                            <i class="glyphicon glyphicon-envelope"></i>{{ form_widget(form.password.confirm, {'attr': {'class': ''}}) }}
                            <br />
                            <br />
                        <!-- Split button -->
                        <div class="btn-group">
                            
                                {{ form_end(form) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


</main>

{% endblock %}
