{% extends 'panel.html.twig' %}

{% block title %}Wydarzenia{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<main style="margin-left: 10px;">
{% for e in event %}
<div class="card bg-light mb-3" style="max-width: 38rem;">
  <div class="card-header">{{ e.subject }}</div>
  <div class="card-body">
    <h5 class="card-title">{{ e.name }}</h5>
    <small><cite title="{{ e.date }}">{{ e.date }} <i class="glyphicon glyphicon-map-marker">
                        </i></cite></small>
    <p class="card-text">{{ e.description }}</p>
  </div>
</div>
{% endfor %}
</main>
{% endblock %}
